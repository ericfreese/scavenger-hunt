- content_for :breadcrumb do
  %li
    = link_to 'Hunts', hunts_path
    %span.divider /
  %li
    = link_to @hunt.name, @hunt
    %span.divider /
  %li
    = link_to 'Teams', hunt_teams_path(@hunt)
    %span.divider /
  %li.active New Team

%h1 New Team

= simple_form_for @team, :url => hunt_teams_path(@hunt), :html => { :class => 'form-horizontal' } do |f|
  = f.input :name, :label => 'Name', :autofocus => true
  .form-actions
    = f.submit :value => 'Save', :class => 'btn btn-primary'